
<% if @user.errors.any? %>
  <div id="error_explination">
    <div class="alert alert-error">
      The form contains <%= pluralize(@user.errors.count, "error") %>.
    </div>
    <ul>
      <% @user.errors.full_messages.each do |text| %>
      <li> * <%= text %> </li>
      <% end %>
    </ul>
  </div>
<% end %>
