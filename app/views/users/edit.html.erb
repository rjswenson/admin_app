<% provide(:title, "Edit user") %>

<h1> Update a user! </h1>

<div class ="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :first_name %>
      <%= f.text_field :first_name%>
      <%= f.label :last_name %>
      <%= f.text_field :last_name %>
      <%= f.label :email %>
      <%= f.text_field :email%>

      <%=f.submit "Save changes", class: "btn btn-large" %>
    <% end %>
  </div>
</div>

<div>
  <%= @foo %>
</div>


 
